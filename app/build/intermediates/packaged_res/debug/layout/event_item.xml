<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="18dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/events_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_name_radius"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="@string/events_item_text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_events"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/item_card_background" />

        <TextView
            android:id="@+id/events_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="@string/events_item_date"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/events_item_organizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="@string/events_item_organizer"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/events_item_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="@string/events_item_place"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/events_item_direction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="@string/events_item_direction"
            android:layout_marginBottom="3dp"
            android:textSize="20sp" />
        <Button
            android:id="@+id/join_event_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_bold"
            android:background="@drawable/round_positive_button"
            android:text="@string/wanna_join"
            android:textSize="23sp"
            app:backgroundTint="@color/green"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout" />

    </LinearLayout>
</androidx.cardview.widget.CardView>